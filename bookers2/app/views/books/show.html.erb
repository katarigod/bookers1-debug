<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(64,64) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(@user) ,class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <div>
            <%= f.text_field :title %>
          </div>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label>
          <div>
            <%= f.text_area :body %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to image_tag(@user.get_profile_image(64,64)), user_path(@user.id) %><br>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td>
              <%= link_to @books.title, book_path(@books.id) %>
            </td>
            <td>
              <%= @books.body %>
            </td>
            <td>
              <% if @books.user == current_user %>
                <%= link_to "Edit", edit_book_path(@books) %>
              <% end %>
            </td>
            <td>
              <% if @books.user == current_user %>
                <%= link_to "Destroy", book_path(@books), method: :delete %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
